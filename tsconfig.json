{
  "compilerOptions": {
      "lib": ["ES6", "DOM"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES6",
      "outDir": "dist",
      "sourceMap": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "resolveJsonModule": true,
      "importHelpers": true
  },
  "paths": {
      "@lib": ["app.ts"]
  },
  "include": ["src", "*"],
  "exclude": ["node_modules"]
}